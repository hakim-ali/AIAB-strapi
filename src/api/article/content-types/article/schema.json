{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "publishedDate": {
      "type": "date",
      "required": true
    },
    "authorName": {
      "type": "string",
      "required": false
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": false
    },
    "category": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "WHITE_PAPER",
        "BOILERPLATE_SOLUTION",
        "USE_CASE_LIBRARY"
      ]
    },
    "article_tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article-tag.article-tag",
      "inversedBy": "articles"
    },
    "secondary_article_tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article-tag.article-tag",
      "inversedBy": "secondary_articles_tags"
    },
    "article_img_tag": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::article-tag.article-tag"
    }
  }
}
